{
  "compilerOptions": {
      "module": "commonjs",
      "lib": ["dom",
        "es2015","es5", "es6"],
      "esModuleInterop": true,
      "emitDecoratorMetadata":true,
      "experimentalDecorators":true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule":true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
          "*": [
              "node_modules/*",
              "src/types/*"
          ]
      }
  },
  "include": [
      "src/**/*"
  ]
}